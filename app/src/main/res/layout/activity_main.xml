<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73BB73"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/game_select_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40sp"
        android:paddingVertical="20sp"
        android:text="Select\nGame "
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/view_rules_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/view_rules_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30sp"
        android:text="View Rules"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_select_button" />
</androidx.constraintlayout.widget.ConstraintLayout>